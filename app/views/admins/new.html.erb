<%= javascript_include_tag 'canvasbg' %><canvas id="canvasbg" ></canvas>
<div id='top-bar'><%= link_to '<i class="fa fa-home"></i>'.html_safe, root_path %></div>
<main>
  <%= content_tag :div, class: 'big-form' do %>
    <h1 class='big-form-banner white'>Plainfolio</h1><br>
    <h1 class='big-form-banner'>Create Admin Account</h1>
    <% @admin.errors.full_messages.each do |msg| %>
      <p class='form-error-message'><%= msg %></p>
    <% end %>
    <%= form_for @admin do |f| %>
      <p class='big-form-text'><%= f.text_field :username, autofocus: true, placeholder: 'Username' %></p>
      <p class='big-form-text'><%= f.password_field :password, placeholder: 'Password' %></p>
      <p class='big-form-text'><%= f.password_field :password_confirmation, placeholder: 'Password confirmation' %></p>
      <p><%= f.submit "Sign Up" %></p>
    <% end %>
  <% end %>
</main>