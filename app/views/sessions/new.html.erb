<%= javascript_include_tag 'canvasbg' %><canvas id="canvasbg" ></canvas>
<div id='top-bar'><%= link_to '<i class="fa fa-home"></i>'.html_safe, root_path %></div>
<main>
  <%= content_tag :div, class: 'big-form' do %>
    <h1 class='big-form-banner'>Log In</h1>
    <%= form_tag sessions_path do %>
      <p class='big-form-text'><%= text_field_tag :username, params[:username], autofocus: true, placeholder: 'Username' %></p>
      <p class='big-form-text'><%= password_field_tag :password, params[:password], autocomplete: "off", placeholder: 'Password' %></p>
      <p><%= submit_tag "Log in" %></p>
    <% end %>
  <% end %>
</main>